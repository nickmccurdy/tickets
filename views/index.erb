<% if @ticket %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		Your ticket has been filed at <strong><%= @ticket.created_at %></strong> for
		<strong><%= @ticket.reason %></strong> under the name
		<strong><%= @ticket.name %></strong>.
	</div>
<% end %>

<h2>Create Ticket</h2>

<div class="well">
	<form method="post">
		<label>Your name</label>
		<input type="text" name="name" autofocus><br>

		<label>Reason</label>
		<label class="radio">
			<input type="radio" name="reason" value="help" checked>
			Help
		</label>
		<label class="radio">
			<input type="radio" name="reason" value="lab review">
			Lab review
		</label>

		<button type="submit" class="btn btn-primary">Create</button>
	</form>
</div>
