source 'https://rubygems.org'

# Important stuff
gem 'rails', '4.0.1'
gem 'thin'

# Database
group :production do
	gem 'pg'
end
group :development, :test do
	gem 'sqlite3'
end

# Gems used for assets
gem 'sass-rails'
gem 'bootstrap-sass'
gem 'uglifier'

group :test do
	gem 'simplecov', require: false
end

group :development do
	gem 'binding_of_caller'
	gem 'better_errors'
end

gem 'rails_12factor', group: :production

gem 'jquery-rails'
gem 'browser_details'

gem 'yard'
gem 'yard-activerecord'
gem 'redcarpet'
gem 'simple_form'
