<% content_for :title, 'All' %>

<table class="table table-striped table-bordered table-hover table-condensed" id="ticket-list">
  <!-- header of the table -->
  <tr>
    <th>Name</th>
    <th><span class="hidden-phone">Computer</span> #</th>
    <th>Reason</th>
    <th>Elapsed time <span class="muted not-bold hidden-phone">(oldest to newest)</span></th>
  </tr>

<% if @tickets.length > 0 %>
  <!-- body of the table -->
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.name %></td>
      <td><%= ticket.computer %></td>
      <td><%= ticket.reason %></td>
      <td>
        <span class="pull-left"><%= distance_of_time_in_words_to_now ticket.created_at %> ago</span>
        <%= link_to ticket, class: 'btn btn-danger pull-right', method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="icon-remove"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
<% else %>
  <!-- displayed if no tickets are open -->
  <tr><td class="muted" colspan="4">No tickets are open.</td></tr>
<% end %>
</table>
