<h1>All tickets</h1>

<table class="table table-striped table-bordered table-hover">
	<tr>
		<th>Computer #</th>
		<th>Reason</th>
		<th>Elapsed time</th>
	</tr>

<% @tickets.each do |ticket| %>
	<tr>
		<td><%= ticket.computer %></td>
		<td><%= ticket.reason %></td>
		<td>
			<%= distance_of_time_in_words_to_now ticket.created_at %>
			<%= link_to ticket, class: 'btn btn-danger pull-right', method: :delete, data: { confirm: 'Are you sure?' } do %>
				<i class="icon-remove icon-white"></i> Destroy
			<% end %>
		</td>
	</tr>
<% end %>
</table>

<%= link_to new_ticket_path, class: 'btn btn-primary' do %>
	<i class="icon-plus icon-white"></i> New Ticket
<% end %>
