<table class="table table-striped table-bordered table-hover">
	<tr>
		<th>Name</th>
		<th>Computer #</th>
		<th>Reason</th>
		<th>Elapsed time <span class="muted not-bold">(oldest to newest)</span></th>
	</tr>

<% if @tickets.length > 0 %>
	<% @tickets.each do |ticket| %>
		<tr>
			<td><%= ticket.name %></td>
			<td><%= ticket.computer %></td>
			<td><%= ticket.reason %></td>
			<td>
				<%= distance_of_time_in_words_to_now ticket.created_at %> ago
				<%= link_to ticket, class: 'btn btn-danger pull-right', method: :delete, data: { confirm: 'Are you sure?' } do %>
					<i class="icon-remove"></i> Destroy
				<% end %>
			</td>
		</tr>
	<% end %>
<% else %>
	<tr><td class="muted" colspan="3">No tickets are open.</td></tr>
<% end %>
</table>

<button class="btn btn-primary" onclick="document.location.reload()">
	<i class="icon-refresh"></i> Reload
</button>

<a href="/destroy_all" class="btn btn-danger pull-right" data-confirm="Are you sure?" rel="nofollow">
	<i class="icon-remove"></i> Destroy all
</a>
