<% content_for :title, 'All' %>

<table class="table table-striped table-bordered table-hover table-condensed" id="ticket-list">
  <!-- header of the table -->
  <tr>
    <th>Name</th>
    <th><span class="hidden-phone">Computer</span> #</th>
    <th>Reason</th>
    <th>Elapsed time <span class="muted not-bold hidden-phone">(oldest to newest)</span></th>
  </tr>

<% if @tickets.length > 0 %>
  <!-- body of the table -->
  <%= render @tickets %>
<% else %>
  <!-- displayed if no tickets are open -->
  <tr><td class="muted" colspan="4">No tickets are open.</td></tr>
<% end %>
</table>
