<h1>Listing tickets</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Owner</th>
    <th>Reason</th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.owner %></td>
    <td><%= ticket.reason %></td>
    <td><%= link_to ticket, class: 'btn btn-primary' do %>
      <i class="icon-eye-open icon-white"></i> Show
    <% end %></td>
    <td><%= link_to ticket, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="icon-remove icon-white"></i> Destroy
    <% end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to new_ticket_path, class: 'btn btn-primary' do %>
  <i class="icon-plus icon-white"></i> New Ticket
<% end %>
