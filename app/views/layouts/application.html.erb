<!DOCTYPE html>
<html lang="en">
<head><meta charset="utf-8">
  <!-- basic info -->
  <title>Tickets - <%= yield :title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- css -->
  <%= stylesheet_link_tag 'application', media: 'all', "data-turbolinks-track" => true %>
  <!-- meta tags -->
  <%= csrf_meta_tags %>
  <!-- icons -->
  <link rel="icon" href="/favicon.png">
</head>
<body>

  <div class="container-fluid" id="main">

    <!-- navbar -->
    <div class="navbar navbar-inverse">
      <div class="navbar-inner">

        <!-- major page links -->
        <a class="brand" href="/">Tickets</a>

        <!-- extra UI buttons for the page -->
        <div id="list-buttons" class="pull-right">

          <%= yield :extra_buttons %>

          <button class="btn btn-inverse" onclick="document.location.reload()">
            <i class="icon-refresh"></i> Reload
          </button>

        </div>

      </div>
    </div>

    <!-- page content -->
    <%= yield %>

    <!-- footer links -->
    <% unless current_page? '/admin' %>
      <footer>
        <%= link_to 'Admin', '/admin' %>
      </footer>
    <% end %>

  </div>

<!-- scripts -->
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<!--[if lt IE 9]><script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</body>
</html>
